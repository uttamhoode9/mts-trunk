<?xml version="1.0" encoding="UTF-8"?>
<!-- Related XMLSchema file: conf/schemas/scenario.xsd -->
<!--  name="Send 3GPP Sh Push-Notification request (PNR)" -->
<scenario>

<!--
From 3GPP TS29.329.730 :
Push-Notification-Request ::= < Diameter Header:  309, REQ, PXY, 16777217 >
                                 < Session-Id >
                                 { Vendor-Specific-Application-Id }
                                   Vendor-Specific-Application-Id ::= < AVP Header: 260 >
                                                                        1* [ Vendor-Id ]
                                                                        0*1{ Auth-Application-Id }
                                                                        0*1{ Acct-Application-Id }
                                 { Auth-Session-State }
                                 { Origin-Host }
                                 { Origin-Realm }
                                 { Destination-Host }
                                 { Destination-Realm }
                                *[ Supported-Features ]
                                   Supported-Features ::=  < AVP header: 628 10415 >
                                                              { Vendor-Id }
                                                              { Feature-List-ID }
                                                              { Feature-List }
                                                             *[AVP]
                                 { User-Identity }
                                   User-Identity ::= < AVP header: 700 10415 >
                                                         [Public-Identity]
                                                         [MSISDN]
                                                        *[AVP]
                                 { User-Data }
                                *[ AVP ]
                                *[ Proxy-Info ]
                                   Proxy-Info ::= < AVP Header: 284 >
                                                      { Proxy-Host }
                                                      { Proxy-State }
                                                    * [ AVP ]
                                *[ Route-Record ]

-->

    <sendMessageDIAMETER name="Send Request 3GPP/SH/PNR" remoteURL="diameter://[Local-Address]" destScenario="client">
        <header request="true" command="Push-Notification" applicationId="16777217" proxiable="true" error="false" retransmit="false"/>
          <avp code="Session-Id" mandatory="true" type="UTF8String" value="hss.sip.france.fr;45e45ee4;046725;5cd579ef"/>
          <avp code="Vendor-Specific-Application-Id">
            <avp code="Vendor-Id" mandatory="true" type="Unsigned32" value="10415"/>
            <avp code="Auth-Application-Id" mandatory="true" type="Unsigned32" value="16777217"/>
            <!--avp code="Acct-Application-Id" mandatory="true" type="Unsigned32" value="16777217"/-->
          </avp>

          <!-- The Auth-Session-State AVP specifies whether state is maintained for a particular session. -->
          <!-- Possible enumerated values : STATE_MAINTAINED(0) / NO_STATE_MAINTAINED(1). NO_STATE_MAINTAINED must be used (TS 29.229.750). -->
          <avp code="Auth-Session-State" mandatory="true" type="Enumerated" value="NO_STATE_MAINTAINED"/>

          <avp code="Origin-Host" mandatory="true" type="DiameterIdentity" value="[Remote-Host]"/>
          <avp code="Origin-Realm" mandatory="true" type="DiameterIdentity" value="[Remote-Realm]"/>
          <avp code="Destination-Host" mandatory="true" type="DiameterIdentity" value="[Local-Host]"/> 
          <avp code="Destination-Realm" mandatory="true" type="DiameterIdentity" value="[Local-Realm]"/>            

          <!-- The Supported-Features AVP may inform the destination host about the features that the origin host supports. -->
          <avp code="Supported-Features" vendorId="10415">
            <avp code="Vendor-Id" mandatory="true" type="Unsigned32" value="10415"/>
            <!-- The Feature-List-ID AVP contains the identity of a feature list. -->
            <avp code="Feature-List-ID" mandatory="false" type="Unsigned32" value="1" vendorId="10415"/>
            <!-- The Feature-List AVP contains a bit mask indicating the supported features of an application. -->
            <avp code="Feature-List" mandatory="false" type="Unsigned32" value="1" vendorId="10415"/> 
          </avp>
          <avp code="Supported-Features" vendorId="10415">
            <avp code="Vendor-Id" mandatory="true" type="Unsigned32" value="10415"/>
            <avp code="Feature-List-ID" mandatory="false" type="Unsigned32" value="2" vendorId="10415"/>
            <avp code="Feature-List" mandatory="false" type="Unsigned32" value="2" vendorId="10415"/> 
          </avp>

          <!-- The User-Identity AVP contains either a Public- Identity AVP or an MSISDN AVP. -->
          <avp code="User-Identity" vendorId="10415">
            <!-- The Public-Identity AVP contains the public identity of a user in the IMS. -->
            <avp code="Public-Identity" mandatory="true" type="UTF8String" value="PublicIdentity1" vendorId="10415"/>                   
            <!-- The MSISDN AVP contains an MSISDN, in international number format as described in ITU-T Rec E.164 [8], encoded as a TBCD-string. -->
            <avp code="MSISDN" mandatory="true" type="OctetString" value="MSISDN1" vendorId="10415"/>                    
          </avp>

          <!-- The User-Data AVP contains the user data requested in the PUR and SNR operations and the data to be modified in the UPR operation. -->
          <avp code="User-Data" mandatory="true" type="OctetString" value="ToBeCompleted" vendorId="10415"/>              

          <avp code="Proxy-Info">
             <avp code="Proxy-Host" mandatory="true" private="false" type="DiameterIdentity" value="ToBeCompleted"/>
             <avp code="Proxy-State" mandatory="true"  private="false" type="OctetString" value="ToBeCompleted"/>
          </avp>
          <avp code="Proxy-Info">
             <avp code="Proxy-Host" mandatory="true"  private="false" type="DiameterIdentity" value="ToBeCompleted"/>
             <avp code="Proxy-State" mandatory="true"  private="false" type="OctetString" value="ToBeCompleted"/>
          </avp>
          <avp code="Route-Record" mandatory="true"  private="false" type="DiameterIdentity" value="ToBeCompleted"/>
          <avp code="Route-Record" mandatory="true"  private="false" type="DiameterIdentity" value="ToBeCompleted"/>
    </sendMessageDIAMETER>

    <receiveMessageDIAMETER name="Receive Answer 3GPP/SH/PNA" request="false" type="Push-Notification:309" result="DIAMETER_SUCCESS:2001">
    </receiveMessageDIAMETER>
    
</scenario>
