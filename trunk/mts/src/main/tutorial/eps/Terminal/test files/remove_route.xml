<?xml version="1.0" encoding="UTF-8"?>
<scenario>
	<if>
		<condition>
			<test parameter="[OsProperty]" condition="string.contains" value="Windows" />
		</condition>
		<then>
			<log level="INFO">[OsProperty] -- Windows</log>
			<parameter name="[addRoute]" operation="system.command" value="<parameter name="[cr]" operation="system.command" value="route delete [Host-Server] mask 255.255.255.255 [targeteNodeBIP] metric 1" />" />
		</then>
		<else>
			<log level="INFO">[OsProperty] -- Linux</log>
			<parameter name="[addRoute]" operation="system.command" value="route del -host [Host-Server] gw [eNodeBIP]" />
		</else>
	</if>
</scenario>
