<?xml version="1.0" encoding="UTF-8"?>
<!-- Related XMLSchema file: conf/schemas/scenario.xsd -->
<!-- useful link to check message encoding http://www.smartposition.nl/resources/sms_pdu.html -->
<!-- wireshark is able to decode the message and to show in a readable way -->

<scenario>

    <function file="105_sip_message_SMSoIP/library_UAS.xml"/>

    <parameter name="[smsBinary]" operation="string.toBinary" value="[smsText]" value2="[smsAlphabet]"/>
    <parameter name="[smsText]" operation="binary.toString" value="[smsBinary]" value2="[smsAlphabet]"/>
    <parameter name="[smsBinary]" operation="string.toBinary" value="[smsText]" value2="[smsAlphabet]"/>
    <parameter name="[smsTextLength]" operation="string.length" value="[smsText]"/>
        
  	<call name="receive_message" >
      <output>
          <parameter name="[receivedSmsText]" value="[function:receivedSmsText]"/>
      </output>
    </call>
    
    <parameter name="[receivedSmsTextLength]" operation="string.length" value="[receivedSmsText]"/>
    <test parameter="[receivedSmsTextLength]" condition="string.equals" value="[smsTextLength]"/>
    <test parameter="[receivedSmsText]" condition="string.equals" value="[smsText]"/>
    
</scenario>
