<test name="MGCP" description="MGCP regression tests">

	<parameter name="[transactionId]" operation="number.uid" value="[transactionId]" />
    
    <parameter name="[Host-Tester]" operation="system.ipaddress"/>
    <parameter name="[Host-Tester]" operation="set" value="[Host-Tester(0)]"/>
	<parameter name="[Port-Tester]" operation="file.readProperty" value="mgcp.properties" value2="listenpoint.LOCAL_PORT"/>
    <parameter name="[Host-Server]" operation="system.ipaddress"/>
    <parameter name="[Host-Server]" operation="set" value="[Host-Server(0)]"/>
	<parameter name="[Port-Server]" operation="file.readProperty" value="mgcp.properties" value2="listenpoint.LOCAL_PORT"/>
	
	<for index="[index]" from="1" to="10" step="1">
	
		<testcase name="mgcp/createConnection" description="test createConnection" state="true">
			<scenario name="Call-Agent">Call_Agent.xml</scenario>
			<scenario name="Call-Server">Gateway.xml</scenario>
		</testcase>
	 </for>
	 
</test>