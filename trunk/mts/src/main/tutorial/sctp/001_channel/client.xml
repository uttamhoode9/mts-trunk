<?xml version="1.0" encoding="UTF-8"?>

<scenario>

    <parameter name="[channelName]" operation="set" value="[scenarioName]"/>
    <openChannelSCTP name="[channelName]" localHost="[localHostSCTP]" localPort="[localPortSCTP]" remoteHost="[remoteHostSCTP]" remotePort="[remotePortSCTP]"  num_ostreams="65535" max_instreams="65535" />
    
    <sendMessageSCTP channel="[channelName]" stream="65534" ssn="65535" ppid="2222222222"  
                    flags="0" context="2333444555" ttl="3444555666" 
                     tsn= "2345678901" cumtsn=  "3456789012" aid="4000000000">
        <data format="binary">h41:1 h441:1 b01000001:1 d0000065:1 65</data>
    </sendMessageSCTP>

    <receiveMessageSCTP channel="[channelName]" request="true" type="DATA" timeout="[timeout]">
    </receiveMessageSCTP>

    <closeChannelSCTP name="[channelName]"/> 
    <pause seconds="1"/>

    <openChannelSCTP name="[channelName]" remoteHost="[remoteHostSCTP]" remotePort="[remotePortSCTP]"/>
   
    <sendMessageSCTP channel="[channelName]" stream="0" ssn="0" ppid="2222222222" flags="0" >
        <data format="binary">h41:1 h441:1 b01000001:1 d0000065:1 65</data>
    </sendMessageSCTP>

    <finally>

    <receiveMessageSCTP request="true" type="ABORT-ACK" timeout="[timeout]">
        <parameter name="[lastChannelName]" operation="protocol.setFromMessage" value="channel.name"/>
    </receiveMessageSCTP>

    <closeChannelSCTP name="[channelName]"/> 
                  
    </finally>

    
</scenario>
