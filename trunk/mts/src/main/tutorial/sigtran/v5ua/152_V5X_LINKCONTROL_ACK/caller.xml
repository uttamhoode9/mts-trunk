<scenario>

    <sendMessageSIGTRAN name="Send SIGTRAN" remoteHost="[Host-Server]" remotePort="[Port-Server]">
       	
        <ISDN name="V5.X" syntax="../conf/sigtran/v5x.xml">
        
	    <!-- LINKCONTROLACKNOWLEDGE = b0110001 = h31 = d49-->
