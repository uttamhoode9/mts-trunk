	            <field name="TEI" value="1"/>
	            <field name="Un_Bit" value="1"/>
	            <field name="EFA" value="0"/>
	    </parameter>
            <parameter tag="Protocol_Data">
                <field name="Protocol_Data" value="DEFINED IN UPPER LAYER"/>
            </parameter>
        </UA>	
        
    </sendMessageSIGTRAN>

