<?xml version="1.0" encoding="UTF-8"?>

<test name="TLS" description="TLS regression tests">

    <!-- Parameters for proxy testcases -->
    <parameter name="[localHost]" operation="system.ipaddress"/>
    <!--parameter name="[localHost]" operation="set" value="127.0.0.1"/-->
    <!--parameter name="[localHost]" operation="set" value="172.16.21.32"/-->
    <parameter name="[localHost]" operation="set" value="[localHost(0)]" editable="true"/>
    <parameter name="[localPort]" operation="set" value="12345" editable="true"/>
    
    <parameter name="[remoteHost]" operation="system.ipaddress"/>
    <!--parameter name="[remoteHost]" operation="set" value="127.0.0.1"/-->
    <!--parameter name="[remoteHost]" operation="set" value="172.16.21.194"/-->
    <parameter name="[remoteHost]" operation="set" value="[remoteHost(0)]" editable="true"/>
    <parameter name="[remotePort]" operation="file.readProperty" value="tls.properties" value2="listenpoint.LOCAL_PORT"/>
    <parameter name="[remotePort]" operation="set" value="[remotePort]" editable="true"/>

       
    <testcase name="tls/001_binary" state="true">
        <scenario name="TLS">001_binary/scenario.xml</scenario>
    </testcase>
    
    <testcase name="tls/002_listenpoint" state="true">
        <scenario name="TLS">002_listenpoint/scenario.xml</scenario>
    </testcase>
    
    <testcase name="tls/003_passive_client" state="true">
        <scenario name="TLS">003_passive_client/scenario.xml</scenario>
    </testcase>

</test>
