<?xml version="1.0" encoding="UTF-8"?>

<scenario>

	<!-- All param -->
    <createListenpointUDP name="socket1" localHost="[localHost]" localPort="[localPort]" />
  	<createListenpointUDP name="socket2" localHost="[remoteHost]" localPort="[remotePort]" />
   
    <sendMessageUDP listenpoint="socket1" remoteHost="[remoteHost]" remotePort="[remotePort]" length="3">
        <data format="binary">h41:1 h441:1 b01000001:1 d0000065:1 65</data>
    </sendMessageUDP>
	
    <receiveMessageUDP timeout="5">
         <parameter name="[temp]" operation="protocol.setFromMessage" value="data.binary" />
        <parameter name="[contents]" operation="protocol.setFromMessage" value="data.text" />
        <test parameter="[contents]" condition="string.equals" value="AAA" />
	</receiveMessageUDP>

	<removeListenpointUDP name="socket1" />
    <removeListenpointUDP name="socket2" />
    
	<!-- without remotePort in the packet-->
    <createListenpointUDP name="socket1" />
	<createListenpointUDP name="socket2" localHost="[remoteHost]" localPort="[remotePort]" />
   
    <sendMessageUDP listenpoint="socket1" remoteHost="[remoteHost]" remotePort="[remotePort]" length="3">
        <data format="binary">h41:1 h441:1 b01000001:1 d0000065:1 65</data>
	</sendMessageUDP>
    
    <receiveMessageUDP timeout="5">
        <parameter name="[temp]" operation="protocol.setFromMessage" value="data.binary" />
        <parameter name="[contents]" operation="protocol.setFromMessage" value="data.text" />
        <test parameter="[contents]" condition="string.equals" value="AAA" />
	</receiveMessageUDP>

	<removeListenpointUDP name="socket1" />
    <removeListenpointUDP name="socket2" />
    	
    <!-- without remoteHost in the packet-->
    <createListenpointUDP name="socket1" />
	<createListenpointUDP name="socket2" localHost="[remoteHost]" localPort="[remotePort]" />
   
    <sendMessageUDP listenpoint="socket1" remoteHost="[remoteHost]" remotePort="[remotePort]" length="3">
        <data format="binary">h41:1 h441:1 b01000001:1 d0000065:1 65</data>
	</sendMessageUDP>

	
    <receiveMessageUDP timeout="5">
        <parameter name="[temp]" operation="protocol.setFromMessage" value="data.binary" />
        <parameter name="[contents]" operation="protocol.setFromMessage" value="data.text" />
        <test parameter="[contents]" condition="string.equals" value="AAA" />
	</receiveMessageUDP>

	<removeListenpointUDP name="socket1" />
    <removeListenpointUDP name="socket2" />
    	
    <!-- without remoteHost and remotePort in the packet-->
    <createListenpointUDP name="socket1" />
	<createListenpointUDP name="socket2" localHost="[remoteHost]" localPort="[remotePort]" />
   
    <sendMessageUDP listenpoint="socket1" remoteHost="[remoteHost]" remotePort="[remotePort]" length="3">
        <data format="binary">h41:1 h441:1 b01000001:1 d0000065:1 65</data>
	</sendMessageUDP>

	
    <receiveMessageUDP timeout="5">
        <parameter name="[temp]" operation="protocol.setFromMessage" value="data.binary" />
        <parameter name="[contents]" operation="protocol.setFromMessage" value="data.text" />
        <test parameter="[contents]" condition="string.equals" value="AAA" />
	</receiveMessageUDP>

	<removeListenpointUDP name="socket1" />
    <removeListenpointUDP name="socket2" />
    	
</scenario>
