	 Related dictionary file:	conf/sigtran/dictionary_m3ua.xml
	 							conf/sigtran/dictionary_bicc.xml
	 							
	 References:				IETF RFC_4666 (M3UA)
	 							IUT-T Q_1902.3 (BICC)
-->


<!--
    Document   : alice.xml
    Created on : 11/08/2009
    Author     : jbrisseau
    Description: Send a BICC-ANM message.
-->


<scenario>


<!--
    MESSAGE : ANM (message 115, mss-1.pcap)
    
-->


    <sendMessageSIGTRAN	name="Send BICC_ANM"
						destScenario="SIGTRAN" 
						remoteHost="[localHostM3UA]" 
						remotePort="[localPortM3UA]">
		
        <SS7 name="bicc" file="bicc.xml">
            <header>
                <field name="CIC" length="4" value="9"/>
                <field name="Message_Type" length="1" value="9" />
            </header>
        </SS7>

        <UA name="m3ua" file="m3ua.xml">
            <header 	version="1"
						reserved="0" 
						messageClass="1" 
						messageType="1"/>
						
            <parameter tag="Network_Appearence">
                <field name="Network_Appearence" value="1"/>
            </parameter>
			
            <parameter tag="Protocol_Data">
                <field name="Originating_Point_Code"					value="3454"/>
                <field name="Destination_Point_Code"					value="3453"/>
                <field name="SI"										value="BICC"/>
                <field name="NI"										value="2"/>
                <field name="MP"										value="0"/>
                <field name="SLS"										value="3"/>
                <field name="FVO"	format="fvo"/>
            </parameter>
        </UA>
    </sendMessageSIGTRAN>
	

	
</scenario>