<?xml version="1.0" encoding="UTF-8"?>

<test name="TCP" description="TCP regression tests">

    <parameter name="[IPVersion]" operation="set" value="ipv4" description="version of the IP protocol" editable="true"/>
    
    <parameter name="[localHostTCP]" operation="system.ipaddress" value2="[IPVersion]"/>
    <parameter name="[localHostTCP]" operation="set" value="[localHostTCP(0)]" description="local address of the MTS host" editable="true"/>
    <parameter name="[localPort]" operation="set" value="12345" description="local port of the MTS host" editable="true"/>
    
    <parameter name="[remoteHostTCP]" operation="system.ipaddress" value2="[IPVersion]"/>
    <!--parameter name="[remoteHostTCP]" operation="set" value="172.16.21.32"/-->
    <parameter name="[remoteHostTCP]" operation="set" value="[remoteHostTCP(0)]" description="remote address of the SUT host" editable="true"/>
    <parameter name="[remotePortTCP]" operation="file.readProperty" value="tcp.properties" value2="listenpoint.LOCAL_PORT"/>
    <!--parameter name="[remotePortTCP]" operation="set" value="1234"/-->
    <parameter name="[remotePortTCP]" operation="set" value="[remotePortTCP]" description="remote port of the SUT host" editable="true"/>

    <testcase name="tcp/001_binary" state="true">
        <scenario name="TCP">001_binary/scenario.xml</scenario>
    </testcase>
    <testcase name="tcp/002_listenpoint" state="true">
        <scenario name="TCP">002_listenpoint/scenario.xml</scenario>
    </testcase>
    <testcase name="tcp/003_passive_client" state="true">
        <scenario name="TCP">003_passive_client/scenario.xml</scenario>
    </testcase>    
    <testcase name="tcp/101_eserv_client" state="true">
        <scenario name="TCP">101_eserv_client/scenario.xml</scenario>
    </testcase>
    <testcase name="tcp/901_eserv_server" state="false">
        <scenario name="TCP">901_eserv_server/scenario.xml</scenario>
    </testcase>
    <testcase name="tcp/902_client_flux" state="false">
        <scenario name="client">902_client_flux/scenario.xml</scenario>
    </testcase>
</test>
