<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<test description="SCTP regression tests" name="SCTP">

    <parameter name="[IPVersion]" operation="set" value="ipv4" description="version of the IP protocol" editable="true"/>
    
    <parameter name="[localHostSCTP]" operation="system.ipaddress" value2="[IPVersion]"/>
    <parameter name="[localHostSCTP]" operation="set" value="[localHostSCTP(0)]" description="local address of the MTS host" editable="true"/>
    <parameter name="[localPortSCTP]" operation="set" value="4011" description="local port of the MTS host" editable="true" />
    
    <parameter name="[remoteHostSCTP]" operation="system.ipaddress" value2="[IPVersion]"/>
    <!--parameter name="[remoteHostSCTP]" operation="set" value="172.16.21.32"/-->
    <parameter name="[remoteHostSCTP]" operation="set" value="[remoteHostSCTP(0)]" description="remote address of the SUT host" editable="true"/>
    <parameter name="[remotePortSCTP]" operation="file.readProperty" value="sctp.properties" value2="listenpoint.LOCAL_PORT"/>
    <!--parameter name="[remotePortSCTP]" operation="set" value="10000" /-->
    <parameter name="[remotePortSCTP]" operation="set" value="[remotePortSCTP]" description="remote port of the SUT host" editable="true"/>
    
    <testcase name="001_channel" description="channel + SCTP XML parameter : flag=0" state="true">
        <parameter name="[newSsn]" operation="set" value="0"/>
        <scenario name="client" file="001_channel/client.xml" routingName=""/>
        <scenario name="server" file="001_channel/server.xml" routingName="SCTP"/>
    </testcase>

    <testcase name="002_binary" description="channel + SCTP config parameter " state="true">    
        <scenario name="client" file="002_binary/client.xml" routingName=""/>
        <scenario name="server" file="002_binary/server.xml" routingName="SCTP"/>        
    </testcase>

    <testcase name="003_listenpoint" description="listenpoint + SCTP XML parameter : flag=1" state="true">
        <scenario name="client" file="003_listenpoint/client.xml" routingName=""/>
        <scenario name="server" file="003_listenpoint/server.xml" routingName="SCTP"/>
    </testcase>

    <testcase name="004_passive_client" description="passive client" state="true">
        <scenario name="client" file="004_passive_client/client.xml" routingName=""/>
        <scenario name="server" file="004_passive_client/server.xml" routingName="SCTP"/>
    </testcase>

    <testcase name="005_multihoming" description="multihoming feature" state="true">
        <scenario name="client" file="005_multihoming/client.xml" routingName=""/>
        <scenario name="server" file="005_multihoming/server.xml" routingName="SCTP"/>
    </testcase>
    
    <testcase name="client" description="client" state="false">
        <scenario file="901_client/scenario.xml" name="client" routingName="client"/>
    </testcase>
    
    <testcase name="server" description="server as proxy" state="false">
        <scenario file="901_server/scenario.xml" name="server" routingName="[remotePortSCTP]"/>
    </testcase>
    
</test>
