<?xml version="1.0" encoding="UTF-8"?>

<test name="SMPP non regression load tests">

    <parameter name="[listenIp]" operation="set" value="0.0.0.0" />
    <parameter name="[remoteHostSMPP]" operation="system.ipaddress"/>
    <parameter name="[cpt]" operation="set" value="1" />
    
    <for index="[i]" from="27750" to="27755">
        <testcase name="test_[i]" state="true">
            <parameter name="[port]" operation="set" value="[i]" />
            <scenario name="client_[i]">scenario/client.xml</scenario>
            <scenario name="[i]">scenario/server.xml</scenario>
        </testcase>
    </for>
</test>
