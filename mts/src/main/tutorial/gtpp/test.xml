        <scenario name="GTPP">003_redirection/server.xml</scenario>
    </testcase>

    <testcase name="gtpp/004_dataRecordTransfer" state="true">
        <scenario name="client">004_dataRecordTransfer/client.xml</scenario>
        <scenario name="GTPP">004_dataRecordTransfer/server.xml</scenario>
    </testcase>

