                                                                                                            *[ External-Client ] 
                                                                                                            *[ PLMN-Client ] 
                                                                                                            *[ Service-Type ] 
                                                                                                            *[AVP]
                                                                              *[ MO-LR ] 
																			     MO-LR ::= <AVP header: 1485 10415> 
                                                                                              { SS-Code } 
                                                                                              { SS-Status } 
                                                                                             *[ AVP ]
                                                                              *[AVP]
                                                             [ Teleservice-List ] 
															   Teleservice-List ::= <AVP header: 1486 10415> 
                                                                                     1*{ TS-Code }
                                                                                      *[ AVP ]
                                                             [ Call-Barring-Infor-List ]
                                                               Call-Barring-Infor-List ::= <AVP header: 1488 10415> 
                                                                                            1*{ SS-Code } 
