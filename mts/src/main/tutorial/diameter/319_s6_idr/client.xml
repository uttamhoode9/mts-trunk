                                                                                                                                                                                                      [ Pre-emption-Vulnerability ] 
                                                                                                                                                              *[ AVP ]
                                                                                                                           [ VPLMN-Dynamic-Address-Allowed ] 
                                                                                                                           [ MIP6-Agent-Info ] 
																														     MIP6-Agent-Info ::= < AVP Header: 486 > 
                                                                                                                                                   *2[ MIP-Home-Agent-Address ] 
                                                                                                                                                     [ MIP-Home-Agent-Host ] 
                                                                                                                                                     [ MIP6-Home-Link-Prefix ] 
                                                                                                                                                    *[ AVP ] 
                                                                                                                           [ Visited-Network-Identifier ] 
