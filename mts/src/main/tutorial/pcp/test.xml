<?xml version="1.0" encoding="UTF-8"?>

<test name="PCP" description="PCP regression tests">

    <parameter name="[IPVersion]" operation="set" value="ipv4" description="version of the IP protocol" editable="true" />
    
    <parameter name="[localHostPCP]" operation="system.ipaddress" value2="[IPVersion]"/>
    <parameter name="[localHostPCP]" operation="set" value="[localHostPCP(0)]" description="local address of the MTS host" editable="true"/>
    <parameter name="[localPortPCP]" operation="file.readProperty" value="pcp.properties" value2="listenpoint.LOCAL_PORT"/>
    <parameter name="[localPortPCP]" operation="set" value="10000" description="local port of the MTS host" editable="true"/>
    
    <parameter name="[remoteHostPCP]" operation="system.ipaddress" value2="[IPVersion]"/>
    <!--parameter name="[remoteHostPCP]" operation="set" value="172.16.21.32"/-->
    <parameter name="[remoteHostPCP]" operation="set" value="[remoteHostPCP(0)]" description="remote address of the SUT host" editable="true"/>
    <parameter name="[remotePortPCP]" operation="file.readProperty" value="pcp.properties" value2="listenpoint.LOCAL_PORT"/>
    <!--parameter name="[remotePortPCP]" operation="set" value="1234"/-->
    <parameter name="[remotePortPCP]" operation="set" value="[remotePortPCP]" description="remote port of the SUT host" editable="true"/>

    <testcase name="pcp/000_simpleTest" description="simple test" state="false">
        <scenario name="channelPCP">000_simpleTest/UAC.xml</scenario>
        <scenario name="UAS">000_simpleTest/UAS.xml</scenario>
    </testcase>
    <testcase name="pcp/001_wiresharkReplay" description="simple test" state="true">
        <scenario name="TCP">001_wiresharkReplay/UAC.xml</scenario>
        <scenario name="UAS">001_wiresharkReplay/UAS.xml</scenario>
    </testcase>

</test>
