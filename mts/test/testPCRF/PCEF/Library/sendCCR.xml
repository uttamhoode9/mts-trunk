     <avp code="Proxy-Host" mandatory="true"  private="false" type="DiameterIdentity" value="ToBeCompleted2"/>
     <avp code="Proxy-State" mandatory="true"  private="false" type="OctetString" value="ToBeCompleted2"/>
  </avp>
