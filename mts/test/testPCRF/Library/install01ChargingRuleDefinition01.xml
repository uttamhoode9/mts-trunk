<!-- To be built with the template ChargingRuleDefinition00.xml. -->

    <!-- 3GPP TS 29.212 : The Charging-Rule-Definition AVP (AVP code 1003) is of type Grouped, and it defines the PCC rule for a service data flow sent by the PCRF to the PCEF.   -->
    <avp code="Charging-Rule-Definition" state="[CRI1withCRD1]">
      <!-- 3GPP TS 29.212 : The Charging-Rule-Name AVP (AVP code 1005) is of type OctetString, and it defines a name for PCC rule. For PCC rules provided by the PCRF it uniquely identifies a PCC rule within one IP CAN session. -->
      <avp code="Charging-Rule-Name" vendorId="TGPP" mandatory="true" type="OctetString" value="[install1Definition1RuleName]"/>

      <!-- The Service-Identifier AVP contains the identifier of the service. -->
      <avp code="Service-Identifier" type="Unsigned32" value="[install1Definition1ServiceIdentifier]"/>
      <!-- The Rating-Group AVP contains the identifier of a rating group. -->
      <avp code="Rating-Group" type="Unsigned32" value="[install1Definition1RatingGroup]"/>
   
      <!--avp code="Flow-Information"/-->
      <!--avp code="Flow-Status"/-->
      <!--avp code="QoS-Information"/-->
      <!--avp code="PS-to-CS-Session-Continuity"/-->
      <!--avp code="Reporting-Level"/-->
      <!--avp code="Online"/-->
      <!--avp code="Offline"/-->
      <!--avp code="Metering-Method"/-->
      <!--avp code="Precedence"/-->
      <!--avp code="AF-Charging-Identifier"/-->
      <!--avp code="Flows"/-->
   
      <!-- The Monitoring-Key AVP (AVP code 1066) is of type OctetString and is used for usage monitoring control purposes as an identifier to a usage monitoring control instance. -->
      <avp code="Monitoring-Key" mandatory="true" type="OctetString" value="[install1Definition1MonitoringKey]"/>
   
      <!--avp code="AF-Signalling-Protocol"/-->
      <!--avp code="Sponsor-Identity"/-->
