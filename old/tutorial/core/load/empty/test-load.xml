<?xml version="1.0" encoding="UTF-8"?>
<!-- Related XMLSchema file: conf/schemas/test.xsd -->

<test name="CORE_Load_Test">

    <parameter name="[speedTestcase]" operation="set" value="10000" description="number of testcase per second"   	    editable="true"/>	
    <parameter name="[TestDurationSec]" operation="set" value="60" description="Duration (in sec.) of the test"   	    editable="true"/>
    <parameter name="[NumberTestcase]" operation="set" value="10" description="number of testcase"   			        editable="true"/>
	
    <parameter name="[delayTestcase]" operation="divide" value="1" value2="[speedTestcase]"/>	
    <parameter name="[delayTestcase]" operation="multiply" value="[delayTestcase]" value2="[NumberTestcase]"/>	
    <runProfile>
        <start delay="10" />
        <step time="0" period="[delayTestcase]"/>       
        <step time="10" period="[delayTestcase]"/>       
        <end delay="20" iteration="3000" />
    </runProfile>


    <for index="[index]" from="001" to="[NumberTestcase]" step="1">
        <testcase name="empty" description="empty testcase" state="true" number="1">
        	<parameter name="[rand]" operation="number.random" value="5" />
            <runProfile>
                <start delay="0" />
                <step time="0" period="0" />       
                <end delay="[TestDurationSec]" />
            </runProfile>
            <scenario name="empty">empty.xml</scenario>	
        </testcase> 
    </for>
	  
</test>
